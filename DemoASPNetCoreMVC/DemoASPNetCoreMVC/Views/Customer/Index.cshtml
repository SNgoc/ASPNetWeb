@model IEnumerable<DemoASPNetCoreMVC.Models.Customer>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Index</title>
</head>
<body>
    <h1>Index</h1>
    <a asp-action="Create">Create New</a>
    <table>
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => m.Id)</th>
                <th>@Html.DisplayNameFor(m => m.Name)</th>
                <th>@Html.DisplayNameFor(m => m.Gender)</th>
                <th>@Html.DisplayNameFor(m => m.Birthday)</th>
                <th>@Html.DisplayNameFor(m => m.Email)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@Html.DisplayFor(md => item.Id)</td>
                <td>@Html.DisplayFor(md => item.Name)</td>
                <td>@Html.DisplayFor(md => item.Gender)</td>
                <td>@Html.DisplayFor(md => item.Birthday)</td>
                <td>@Html.DisplayFor(md => item.Email)</td>
            </tr>
            }
        </tbody>
    </table>
</body>
</html>
