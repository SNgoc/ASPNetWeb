@page
@model BookManager.Pages.Books.CreateModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Create</title>
    @* bootstrap vào _layout.cshtml của shared copy *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <h1>Create a new customer</h1>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Create new Book</h1>
                @* UploadImage phải có enctype="multipart/form-data" *@
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="CurBook.Isbn" class="col-form-label"></label>
                    <input asp-for="CurBook.Isbn" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="CurBook.Title" class="col-form-label"></label>
                    <input asp-for="CurBook.Title" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="CurBook.Price" class="col-form-label"></label>
                    <input asp-for="CurBook.Price" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="CurBook.UploadImage" class="col-form-label"></label>
                    <input asp-for="CurBook.UploadImage" type="file" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Create"/>
                </div>
            </form>
            </div>
        </div>
    </div>
    @* bootstrap *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>