@model IEnumerable<HomeWork4WithLogin.Models.CustomerModel>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RemoveCus</title>
    @* Style css border table *@
    <style>
        table, th, td {
            border: 1px solid black;
        }
    </style>
</head>
<body>
    <h1>Remove Customer</h1>
    <table>
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => m.Id)</th>
                <th>@Html.DisplayNameFor(m => m.Name)</th>
                <th>@Html.DisplayNameFor(m => m.Birthday)</th>
                <th>@Html.DisplayNameFor(m => m.Gender)</th>
                <th>@Html.DisplayNameFor(m => m.Email)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@Html.DisplayFor(mi => item.Id)</td>
                <td>@Html.DisplayFor(mi => item.Name)</td>
                @* birthday phải parse lại kiểu date, ko xài binding @Html.DisplayFor *@
                <td>@string.Format("{0:dd/MM/yyyy}", item.Birthday)</td>
                <td>
                    @if (item.Gender == true)
                    {
                        @:Male
                    }
                    else
                    {
                        @:Female
                    }
                </td>
                <td>@Html.DisplayFor(mi => item.Email)</td>
                <td>
                    <form asp-controller="Customer" asp-action="DeleteCus">
                        @* xóa theo id *@
                        <input type="hidden" name="id" asp-for="@item.Id" />
                        <input type="submit" value="Remove" />
                    </form>
                </td>
            </tr>
            }
        </tbody>
    </table>
    @* Quay lại trang Show *@
    <a asp-action="Show" >Back</a>
</body>
</html>
