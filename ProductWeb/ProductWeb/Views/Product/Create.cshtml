@model ProductWeb.Models.DTO.ProductDTO
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container">
        <div class="row">
            <form asp-action="Create" enctype="multipart/form-data">@* dùng asp-action thì mặc định là method=post nên có thể xóa, upload file dùng enctype *@
                <div class="col-md-12">
                    <h1>Create new Product</h1>
                    @* thông báo lỗi chung *@
                    <div asp-validation-summary="ModelOnly" class="text-danger">

                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UploadImage" class="control-label"></label>
                        <input type="file" id="UploadImage" name="UploadImage" class="form-control" />
                        <span asp-validation-for="UploadImage" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" name="Create" class="btn btn-primary" />
                    </div>
                </div>
            </form>
            
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
