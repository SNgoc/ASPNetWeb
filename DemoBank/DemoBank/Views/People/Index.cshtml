
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <h1>Login</h1>
    @* asp-controller="People" là tên controller *@
    @* asp-action="Login" là tên phương thức trong peoplecontroller *@
<form asp-controller="People" asp-action="Login">
    <div>Username: <input name="username" /></div>
    <div>Password: <input type="password" name="password" /></div>
    <div><input type="submit" value="Login" /></div>
</form>
</body>
</html>
