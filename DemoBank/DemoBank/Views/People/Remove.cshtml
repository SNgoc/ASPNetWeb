@model IEnumerable<DemoBank.Models.TbPerson>
@using Microsoft.AspNetCore.Http;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Remove</title>
</head>
<body>
    <h2>Hello, @Context.Session.GetString("username")</h2>
    <table>
        <thead>
            <tr>
                <th>No.</th>
                <th>Id</th>
                <th>@Html.DisplayNameFor(m => m.Username)</th>
                <th>@Html.DisplayNameFor(m => m.Balance) ($)</th>
            </tr>
        </thead>
        <tbody>
            @{ int i = 0;}
            @foreach (var item in Model)
            {
                int no = i + 1;
                int id = i + 1000;
                <tr>
                    <td>@no</td>
                    <td>@id</td>
                    <td>@Html.DisplayFor(mi => item.Username)</td>
                    <td>
                        <form asp-controller="People" asp-action="Delete">
                            <input type="hidden" name="username" asp-for="@item.Username" />
                            @*<input type="hidden" name="emp" value="@ViewBag.username" />*@
                            <input type="submit" value="Remove" />
                        </form>
                    </td>
                </tr>
                i++;
            }
        </tbody>
    </table>
</body>
</html>
