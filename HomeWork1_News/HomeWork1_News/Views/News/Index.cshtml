
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    @* Style css border table *@
    <style>
        form {
            box-sizing: content-box;
            width: 300px;
            height: 100px;
            padding: 30px;
            border: 1px double black;
        }
    </style>
</head>
<body>
    <h1>Login</h1>
    @* asp-controller="News" là tên controller cũng là tên trang truy cập trên thanh address *@
    @* asp-action="Login" là tên phương thức trong NewsController *@
<form asp-controller="News" asp-action="Login">
    <div>Username:<input name="username" style="margin-left:50px;" /></div> 
    <br />
    <div>Password:<input type="password" name="password" style="margin-left:53px;" /></div>
    <br />
    <div><input type="submit" value="Submit" /><input type="reset" value="Reset" style="margin-left:60px;"/></div>
</form>
</body>
</html>
