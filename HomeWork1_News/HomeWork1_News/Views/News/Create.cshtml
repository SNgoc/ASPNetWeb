@model HomeWork1_News.Models.TbNews
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container">
        <div class="row">
            <form asp-action="Create" enctype="multipart/form-data">
                @* dùng asp-action thì mặc định là method=post nên có thể xóa, upload file dùng enctype="multipart/form-data" *@
                <div class="col-md-12">
                    <h1>Create a News</h1>
                    @* thông báo lỗi chung *@
                    <div asp-validation-summary="ModelOnly" class="text-danger">

                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="HeadLines" class="control-label"></label>
                        <input asp-for="HeadLines" class="form-control" />
                        <span asp-validation-for="HeadLines" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ContentOfNews" class="control-label"></label>
                        <input type="text" asp-for="ContentOfNews" class="form-control" />
                        <span asp-validation-for="ContentOfNews" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" name="Create" class="btn btn-primary" />
                    </div>
                </div>
            </form>

        </div>
    </div>
    @* Quay lại trang Login *@
    <a href="/News">Back</a>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
