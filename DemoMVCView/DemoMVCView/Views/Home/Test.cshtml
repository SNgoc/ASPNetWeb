@using System.Collections.Generic;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Test</title>
</head>
<body>
    @*razor block*@
    @{ var list = new List<string>();
        list.Add("Nero");
        <h4>@list[0]</h4>@*phần nội dung nằm trong thể h4 sẽ đc xử lý như phần htmml*@
        var a = 1;
        var b = 2;
        var c = a + b;
        <h4>@a + @b = @c </h4>
    }
    <h3>output razor var in another block, using for</h3>
    <ul>
        @foreach (var name in list)
        {
            <li>@name</li>
        }
    </ul>

    <h3>using if of razor</h3>
    @if (c>10)
    {
        <h4>@c grater than 10</h4>
    }
    else
	{
        <h4>@c less than 10</h4>
	}
</body>
</html>
